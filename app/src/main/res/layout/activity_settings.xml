<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySettings"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/layout_head_settings"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@drawable/shape">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Настройки"
            android:textSize="30sp"
            android:textColor="@color/allText"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tw_name_and_version_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/allText"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/layout_head_settings"
        android:text=" Sked 1.0.0 (beta) \n Asieieva Sofiya, 2020. \n All rights reserved." />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/allText"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/layout_footer_settings"
        android:layout_centerHorizontal="true"
        android:text="©nure" />

    <Button
        android:id="@+id/btn_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_footer_settings"
        android:background="@android:color/black"
        android:text="Button" />

    <RelativeLayout
        android:id="@+id/layout_footer_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:background="@drawable/shape_footer">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

</RelativeLayout>