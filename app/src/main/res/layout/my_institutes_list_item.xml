<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_institute_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="" />

    <TextView
        android:id="@+id/tv_institute_user_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:text="" />

    <TextView
        android:id="@+id/tv_institute_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/btn_info_institute"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_info" />

    <ImageButton
        android:id="@+id/btn_teacher"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_teacher" />

    <ImageButton
        android:id="@+id/btn_delete_institute"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/btn_delete" />
</LinearLayout>